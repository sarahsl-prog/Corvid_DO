# Corvid Configuration
# Copy this file to .env and fill in your values.

# Database (default: local Docker Compose Postgres)
CORVID_DATABASE_URL=postgresql+asyncpg://corvid:corvid@localhost:5432/corvid

# Redis (default: local Docker Compose Redis)
CORVID_REDIS_URL=redis://localhost:6379/0

# API settings
CORVID_API_HOST=0.0.0.0
CORVID_API_PORT=8000
CORVID_DEBUG=true

# External API keys (Phase 2+)
# ABUSEIPDB_API_KEY=your-key-here
# NVD_API_KEY=your-key-here
